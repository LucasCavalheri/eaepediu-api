// Rotas para o carrinho
Route::middleware('auth:sanctum')->group(function () {
    // Criar carrinho
    Route::post('/carts', App\Http\Controllers\Cart\CreateCartController::class);

    // Listar carrinhos do usuário
    Route::get('/carts', App\Http\Controllers\Cart\GetUserCartsController::class);

    // Obter um carrinho específico
    Route::get('/carts/{cart}', App\Http\Controllers\Cart\GetCartController::class);

    // Adicionar item ao carrinho
    Route::post('/carts/{cart}/items', App\Http\Controllers\Cart\AddCartItemController::class);

    // Atualizar item do carrinho
    Route::put('/carts/{cart}/items/{cartItem}', App\Http\Controllers\Cart\UpdateCartItemController::class);

    // Remover item do carrinho
    Route::delete('/carts/{cart}/items/{cartItem}', App\Http\Controllers\Cart\RemoveCartItemController::class);

    // Excluir carrinho
    Route::delete('/carts/{cart}', App\Http\Controllers\Cart\DeleteCartController::class);
});
